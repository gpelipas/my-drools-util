<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

	<Appenders>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout
				pattern="%d{dd MMM yyyy HH:mm:ss} - %p [%tid] %c - %m%n" />
		</Console>
		
	</Appenders>

	<Loggers>
		<Logger name="com.pelipas" level="DEBUG" additivity="false">
			<AppenderRef ref="STDOUT" />
		</Logger>
		
		<Root level="INFO">
			<AppenderRef ref="STDOUT" />
		</Root>
	</Loggers>
	
</Configuration>